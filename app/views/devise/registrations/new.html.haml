%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-group form-signin' }) do |f|
  = devise_error_messages!
  .field
    = f.label :email
    = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'
  .field
    = f.label :username
    = f.text_field :username, autocomplete: "username", class: 'form-control'
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    = f.password_field :password, autocomplete: "new-password", class: 'form-control'
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'
  .actions
    = f.submit "Sign up", class: 'btn btn-block btn-primary'
.text_center
  = render "devise/shared/links"
  = link_to "Home", root_path
