%header.navbar.navbar-fixed-top.navbar-expand-sm.navbar-inverse
  .container
    %nav
      %ul.nav.navbar-nav.navbar-left
        %li= link_to "Home",   root_path
        - if user_signed_in?
          %li= link_to "List of Names",   team_names_path
          %li= link_to "Your Suggestions",   names_path
          %li= link_to "Create Name",   new_team_name_path
    %nav
      %ul.nav.navbar-nav.navbar-right
        - unless user_signed_in?
          %li= link_to "Log in", new_user_session_path
          %li= link_to "Sign up", new_user_registration_path
        - if current_user
          %li.custom= link_to current_user.username, edit_user_registration_path
          %li= link_to 'Log out', destroy_user_session_path, method: :delete
