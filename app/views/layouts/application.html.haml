!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title PollApp
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header.navbar.navbar-fixed-top.navbar-inverse
      .container
        = link_to "Test app", root_path, id: "logo"
        %nav
          %ul.nav.navbar-nav.navbar-left
            %li= link_to "Home",   root_path
            %li= link_to "About",   about_path
            - if user_signed_in?
              %li= link_to "Names List",   team_names_path
              %li= link_to "Your Suggestions",   names_path
              %li= link_to "Create Name",   new_team_name_path
        %nav
          %ul.nav.navbar-nav.navbar-right
            - unless user_signed_in?
              %li= link_to "Log in", new_user_session_path
              %li= link_to "Sign up", new_user_registration_path
            - if current_user
              %li= link_to current_user.username, edit_user_registration_path
              %li= link_to 'Log out', destroy_user_session_path, method: :delete

    .container
      = yield
      %p= debug(params) if Rails.env.development?
